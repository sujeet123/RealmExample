<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="agreeya.com.realmexample.MainActivity">

    <EditText
        android:id="@+id/emp_name_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:hint="Name"/>

    <EditText
        android:id="@+id/address_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/emp_name_et"
        android:hint="Address"/>

    <EditText
        android:id="@+id/age_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/address_et"
        android:hint="Age"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emp_name_et"
        android:layout_margin="10dp"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/insert_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Insert in Employee Table"/>

    <Button
        android:id="@+id/show_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_bt"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Show all data from table"/>

    <EditText
        android:id="@+id/search_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_bt"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:hint="Enter Emp. Name to search Records"
        />

    <Button
        android:id="@+id/search_result_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_ET"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Search"/>
    <EditText
        android:id="@+id/delete_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_result_bt"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:hint="Enter Emp. Name to delete Record"
        />

    <Button
        android:id="@+id/delete_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_ET"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Delete Records"
        />
</RelativeLayout>
